# ── builder ────────────────────────────────────────────────
FROM golang:1.22-alpine AS builder
WORKDIR /app
COPY server/go.* ./
RUN go mod download
COPY server/. .
RUN CGO_ENABLED=0 go build -o /bin/api ./cmd/api

# ── runner ────────────────────────────────────────────────
FROM alpine:3.20
COPY --from=builder /bin/api /bin/api
EXPOSE 8080
ENTRYPOINT ["/bin/api"]
